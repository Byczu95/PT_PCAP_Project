<Window x:Class="PT_UI_Design.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PT_UI_Design"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Menu x:Name="menu" HorizontalAlignment="Center" VerticalAlignment="Top" Width="517" IsMainMenu="True">
            <MenuItem Header="Plik">
                <MenuItem x:Name="File_Open" Header="Otwórz" Click="File_Open_Click"/>
                <MenuItem x:Name="File_Save" Header="Zapisz"/>
                <MenuItem x:Name="File_SaveAs" Header="Zapisz jako"/>
            </MenuItem>
            <MenuItem Header="Edycja"/>
            <MenuItem Header="Analizuj">
                <MenuItem Header="Mapuj topologię sieci"/>
                <Separator/>
                <MenuItem Header="Statystyki"/>
            </MenuItem>
            <MenuItem Header="Pomoc"/>
        </Menu>
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="301" Margin="0,18,0,0" VerticalAlignment="Top" Width="517">
            <TabItem Header="Rozpocznij">
                <Grid Background="Blue"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
